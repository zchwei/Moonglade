{
  "ConnectionStrings": {
    "MoongladeDatabase": "{PROD-ENV-VARIABLE}"
  },
  "Authentication": {
    "Provider": "AzureAD",
    "AzureAd": {
      "Instance": "https://login.microsoftonline.com/",
      "Domain": "{PROD-ENV-VARIABLE}",
      "TenantId": "{PROD-ENV-VARIABLE}",
      "ClientId": "{PROD-ENV-VARIABLE}",
      "CallbackPath": "/signin-oidc"
    },
    "Local": {
      "Username": "admin",
      "Password": "{PROD-ENV-VARIABLE}"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft": "Warning"
    }
  },
  "ImageStorage": {
    "Provider": "azurestorage",
    "AzureStorageSettings": {
      "ConnectionString": "{PROD-ENV-VARIABLE}",
      "ContainerName": "{PROD-ENV-VARIABLE}"
    },
    "FileSystemSettings": {
      "Path": "${basedir}\\UploadedImages"
    },
    "CDNSettings": {
      "GetImageByCDNRedirect": true,
      "CDNEndpoint": "{PROD-ENV-VARIABLE}"
    }
  },
  "AppSettings": {
    "Editor": "HTML",
    "CaptchaSettings": {
      "ImageWidth": 100,
      "ImageHeight": 36
    },
    "PostSummaryWords": 400,
    "ImageCacheSlidingExpirationMinutes": 60,
    "EnforceHttps": true,
    "EnableImageHotLinkProtection": false,
    "AllowScriptsInCustomPage": false,
    "Notification": {
      "Enabled": true,
      "ApiEndpoint": "{PROD-ENV-VARIABLE}",
      "ApiKey": "{PROD-ENV-VARIABLE}"
    }
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "POST:/comment",
        "Period": "1s",
        "Limit": 2
      },
      {
        "Endpoint": "*:/post/*",
        "Period": "1s",
        "Limit": 5
      }
    ]
  },
  "RobotsTxt": {
    "Sections": [
      {
        "Comment": "Allow Googlebot",
        "UserAgent": "Googlebot",
        "Rules": [
          {
            "Key": "Allow",
            "Value": "/"
          }
        ]
      },
      {
        "Comment": "Disallow Baidu",
        "UserAgent": "Baiduspider",
        "Rules": [
          {
            "Key": "Disallow",
            "Value": "/"
          }
        ]
      },
      {
        "Comment": "General",
        "UserAgent": "*",
        "Rules": [
          {
            "Key": "Disallow",
            "Value": "/errorpages/"
          }
        ]
      }
    ],
    "SitemapUrls": []
  },
  "AllowedHosts": "*"
}